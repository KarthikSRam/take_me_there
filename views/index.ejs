  <script type="text/javascript" script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script type="text/javascript" script src="/scripts/app.js"></script>

<% include ../views/partials/head %>

</head>

<body class="container">

  <nav class="card-panel purple lighten-2">
      <% if(!user) { %>
      <a href="/login">Log in</a>
      <a href="/signup">Sign up</a>
    <% } else { %>
      <div>Welcome, <%= user.username %>!</div>
      <a href="/logout">Log out</a>
    <% } %>
  </nav>

  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper">
        <a href="#!" class="brand-logo">DevelopMe</a>
        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="fa fa-bars"></i></a>
        <ul class="right hide-on-med-and-down">
           <li><%= link_to "Home", root_path %> </li>
          <li><a href="/users">Mentors</a></li>
          <% if current_user %>
            <li> <%= link_to "Profile", user_path(current_user) %> </li>
            <li><%= link_to "Sign Out", logout_path %></li>
          <% else %>
            <li> <%= link_to "Log In", login_path %> </li>
            <li><%= link_to "Sign Up", new_user_path %></li>
          <% end %>
        </ul>
        <ul class="side-nav" id="mobile-demo">
          <li> <%= link_to "Home", root_path %> </li>
          <li><a href="/users">Mentors</a></li>
          <% if current_user %>
            <li> <%= link_to "Profile", user_path(current_user) %> </li>
            <li><%= link_to "Sign Out", logout_path %></li>
          <% else %>
            <li> <%= link_to "Log In", login_path %> </li>
            <li><%= link_to "Sign Up", new_user_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>







<header>
  <% include ../views/partials/header %>
</header>

  <main>
    <div class="Helloworld">
      <h1>Take Me There App </h1>
      <p> lorem ipsum </p>
    </div>
  </main>

  <footer>
    <% include ../views/partials/footer %>
  </footer>

</body>
</html>
