<!DOCTYPE html>
<head>

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script defer src="https://use.fontawesome.com/releases/v5.0.4/js/all.js"></script>
  <title>Take Me There</title>
  <link rel="stylesheet" href="/styles/main.css">
    <!-- Compiled and minified CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

   <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>

  <!--Let browser know website is optimized for mobile-->
  <!-- <meta name="viewport" content="width=device-width, initial-scale=1.0"/> -->

  <script type="text/javascript" script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
  <script type="text/javascript" script src="/scripts/app.js"></script>

</head>

<!-- <body class="container"> -->
<body>


  <nav class="card-panel deep orange accent-3">
      <% if(!user) { %>
      <a href="/login">Log in</a>
      <a href="/signup">Sign up</a>
    <% } else { %>
      <div>Welcome, <%= user.username %>!</div>
      <a href="/logout">Log out</a>
    <% } %>
  </nav>


<header>
  <% include ../views/partials/header %>
</header>

  <main>
    <div class="parallax-container">
      <div class="parallax"><%  %></div>
      <div class="section no-pad-bot" id="index-banner">
          <div class="container">
              <br />
              <br />
              <h1 class="header center orange-text"> Take Me There</h1>
              <div class="row center">
                <h3 class="header col s12 light"> Find your next adventure!</h3>
                <p>Explore the world and create a list of your next go-to places.</p>
          </div>

      <div class="row center">
                <p>Optional TBD Buttons </p>
        <% if(!user) { %>
        <a href="/login">Log in</a>
        <a href="/signup">Sign up</a>
      <% } else { %>
        <div>Welcome, <%= user.username %>!</div>
        <a href="/logout">Log out</a>
      <% } %>

      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s12 m4">
        <div class="icon-block">
          <h2 class="center light-orange-text"> <i class="fas fa-globe"></i></h2>
          <h5 class="center">Explore</h5>
          <p class="light"> Explore </p>
          </div>
      </div>
      <div class="col s12 m4">
        <div class="icon-block">
          <h2 class="center light-orange-text">
            <i class="far fa-user-circle"></i>
          </h2>
          <h5 class="center">Create an Account</h5>
          <p class="light">
            Create An Account
          </p>
        </div>
      </div>

      <div class="col s12 m4">
        <div class="icon-block">
          <h2 class="center light-orange-text">
            <i class="far fa-star"></i>
          </h2>
          <h5 class="center">View you Favorites </h5>
          <p class="light">
            View your Favorites
          </p>
        </div>
      </div>
    </div>
  </div>
</div>


  </main>

  <footer>
    <% include ../views/partials/footer %>
  </footer>

</body>
</html>
